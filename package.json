{
    "name": "fontawesome-autocomplete",
    "displayName": "Font Awesome Autocomplete",
    "version": "0.1.4",
    "publisher": "Janne252",
    "description": "Provides Font Awesome 5.3.1/4.7.0 CSS class names as autocompletion items for any language.",
    "author": {
        "name": "Janne Varjo"
    },
    "categories": [
        "Other"
    ],
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "Font Awesome autocomplete configuration",
            "properties": {
                "fontAwesomeAutocomplete.version": {
                    "type": "string",
                    "enum": [
                        "4",
                        "5"
                    ],
                    "default": "5",
                    "description": "Font Awesome major version to use (either 4 or 5)."
                },
                "fontAwesomeAutocomplete.patterns": {
                    "type": "array",
                    "default": [
                        "**/*.html"
                    ],
                    "description": "List of glob patters that determine which files will have Font Awesome Autocomplete enabled."
                },
                "fontAwesomeAutocomplete.triggerWord": {
                    "type": "string",
                    "default": "fa-",
                    "description": "A word that triggers the auto completion of Font Awesome icons."
                },
                "fontAwesomeAutocomplete.preview.backgroundColor": {
                    "type": "string",
                    "default": "#ffffff",
                    "description": "Background color of a Font Awesome icon preview. Supports any valid CSS color."
                },
                "fontAwesomeAutocomplete.preview.foregroundColor": {
                    "type": "string",
                    "default": "#000000",
                    "description": "Foreground color of a Font Awesome icon preview. Supports any valid CSS color."
                },
                "fontAwesomeAutocomplete.triggerCharacters": {
                    "type": "array",
                    "default": [
                        "f"
                    ],
                    "description": "List of characters that trigger Font Awesome Autocomplete.",
                    "deprecationMessage": "This setting is deprecated and replaced by triggerWord in version 1.0.4. This setting can be safely removed."
                }
            }
        }
    },
    "icon": "image/icon.png",
    "galleryBanner": {
        "color": "#1e1c1e",
        "theme": "dark"
    },
    "license": "SEE LICENSE IN LICENSE.txt",
    "bugs": {
        "url": "https://github.com/Janne252/vscode-fontawesome-auto-complete/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/Janne252/vscode-fontawesome-auto-complete.git"
    },
    "homepage": "https://github.com/Janne252/vscode-fontawesome-auto-complete/blob/master/README.md",
    "engines": {
        "vscode": "^1.23.0"
    },
    "keywords": [
        "Font Awesome",
        "Font Awesome 5",
        "font Awesome 4",
        "class names",
        "auto-complete",
        "icon preview"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./out/extension",
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "tslint -p . && npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.42",
        "@types/node": "^7.0.43",
        "typescript": "^2.6.1",
        "vscode": "^1.1.21"
    },
    "dependencies": {
        "tslint": "^5.11.0"
    }
}
