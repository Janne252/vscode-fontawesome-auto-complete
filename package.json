{
    "name": "fontawesome-autocomplete",
    "displayName": "Font Awesome 5 Autocomplete",
    "version": "0.0.5",
    "publisher": "Janne252",
    "description": "Provides Font Awesome 5.0.12 CSS class names as autocompletion items for any language.",
    "author": {
        "name": "Janne Varjo"
    },
    "categories": [
        "Other"
    ],
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "Font Awesome 5 autocomplete configuration",
            "properties": {
                "fontAwesome5Autocomplete.patterns": {
                    "type": "array",
                    "default": ["**/*.html"],
                    "description": "List of glob patters that determine which files will have Font Awesome 5 Autocomplete enabled."
                },
                "fontAwesome5Autocomplete.triggerCharacters": {
                    "type": "array",
                    "default": ["f"],
                    "description": "List of characters that trigger Font Awesome 5 Autocomplete."
                },
                "fontAwesome5Autocomplete.preview.backgroundColor": {
                    "type": "string",
                    "default": "#ffffff",
                    "description": "Background color of a Font Awesome icon preview. Supports any valid CSS color."
                },
                "fontAwesome5Autocomplete.preview.foregroundColor": {
                    "type": "string",
                    "default": "#000000",
                    "description": "Foreground color of a Font Awesome icon preview. Supports any valid CSS color."
                }
            }
        }
    },
    "icon": "image/icon.png",
    "galleryBanner": {
        "color": "#1e1c1e",
        "theme": "dark"
    },
    "license": "SEE LICENSE IN LICENSE.txt",
    "bugs": {
        "url": "https://github.com/Janne252/vscode-fontawesome-auto-complete/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/Janne252/vscode-fontawesome-auto-complete.git"
    },
    "homepage": "https://github.com/Janne252/vscode-fontawesome-auto-complete/blob/master/README.md",
    "engines": {
        "vscode": "^1.23.0"
    },
    "keywords": [
        "Font Awesome", "Font Awesome 5", "class names", "auto-complete"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./out/extension",
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    }
}
